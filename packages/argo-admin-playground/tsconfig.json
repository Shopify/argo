{
  "extends": "../../config/typescript/tsconfig.admin.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": "../",
    "outDir": "./",
    "baseUrl": "./",
    "jsx": "react-jsx",
    "paths": {
      "@shopify/argo-admin": ["../argo-admin/src"],
      "@shopify/argo-admin/*": ["../argo-admin/src/*"],
      "@shopify/argo-admin-cli": ["../argo-admin-cli/src"],
      "@shopify/argo-admin-cli/*": ["../argo-admin-cli/src/*"],
      "@shopify/argo-admin-react": ["../argo-admin-react/src"],
      "@shopify/argo-admin-react/*": ["../argo-admin-react/src/*"]
    }
  },
  "include": [
    "src",
    "../argo-admin/src",
    "../argo-admin-react/src",
    "../argo-admin-cli/src"
  ]
}
