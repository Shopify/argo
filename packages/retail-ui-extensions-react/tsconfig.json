{
  "extends": "../../config/typescript/tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build/ts",
    "jsx": "react-jsx",
    "isolatedModules": true,
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "esnext",
      "esnext.asynciterable",
      "WebWorker"
    ]
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": ["./src/**/*.example.*"],
  "references": [{"path": "../retail-ui-extensions"}]
}
