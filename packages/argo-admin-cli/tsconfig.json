{
  "extends": "./tsconfig.prod.json",
  "compilerOptions": {
    "rootDir": "../",
    "baseUrl": "./",
    "paths": {
      "@shopify/argo-admin": ["../argo-admin/src"],
      "@shopify/argo-admin/*": ["../argo-admin/src/*"],
      "@shopify/argo-admin-host": ["../argo-admin-host/src"],
      "@shopify/argo-admin-host/*": ["../argo-admin-host/src/*"],
      "@shopify/argo-admin-react": ["../argo-admin-react/src"],
      "@shopify/argo-admin-react/*": ["../argo-admin-react/src/*"],
      "react": ["../../node_modules/react"]
    }
  },
  "include": [
    "../*/src",
    "../*/sample-extension.tsx"
  ]
}
